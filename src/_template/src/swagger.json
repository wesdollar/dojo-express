{
  "openapi": "3.1.0",
  "info": {
    "title": "CallDash API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://ngrok.ddt.software/v1",
      "description": "ngrok tunnel"
    },
    {
      "url": "http://localhost:3002/v1",
      "description": "localhost port 3002"
    }
  ],
  "paths": {
    "/health-check": {
      "get": {
        "tags": ["misc"],
        "summary": "Health check endpoint",
        "responses": {
          "200": {
            "description": "App is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "healthy": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/dashboards": {
      "get": {
        "summary": "Get all dashboards",
        "tags": ["dashboards"],
        "responses": {
          "200": {
            "description": "Dashboards response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Dashboard"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new dashboard",
        "tags": ["dashboards"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewDashboard"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created dashboard",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Dashboard"
                }
              }
            }
          }
        }
      }
    },
    "/dashboards/{id}": {
      "get": {
        "summary": "Get a dashboard by ID",
        "tags": ["dashboards"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Dashboard response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Dashboard"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a dashboard by ID",
        "tags": ["dashboards"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateDashboard"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated dashboard",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Dashboard"
                }
              }
            }
          }
        }
      }
    },
    "/calls": {
      "get": {
        "summary": "Get all calls",
        "tags": ["calls"],
        "responses": {
          "200": {
            "description": "Calls response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CallPostPut"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new call",
        "tags": ["calls"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CallPostPut"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created call",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CallPostPut"
                }
              }
            }
          }
        }
      }
    },
    "/calls/{id}": {
      "get": {
        "summary": "Get a call by ID",
        "tags": ["calls"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Call response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CallPostPut"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a call by ID",
        "tags": ["calls"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CallPostPut"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated call",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CallPostPut"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Dashboard": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "isActive": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "NewDashboard": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "UpdateDashboard": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "isActive": {
            "type": "boolean"
          }
        }
      },
      "CallBase": {
        "type": "object",
        "properties": {
          "twilioSid": {
            "type": "string"
          },
          "dateCreated": {
            "type": "string",
            "format": "date-time"
          },
          "dateUpdated": {
            "type": "string",
            "format": "date-time"
          },
          "twilioAccountSid": {
            "type": "string"
          },
          "calledNumber": {
            "type": "string"
          },
          "calledNumberFormatted": {
            "type": "string"
          },
          "phoneNumberSid": {
            "type": "string"
          },
          "startTime": {
            "type": "string",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time"
          },
          "duration": {
            "type": "integer"
          },
          "price": {
            "type": "number"
          },
          "priceUnit": {
            "type": "string"
          },
          "answeredBy": {
            "type": "string"
          },
          "twilioUri": {
            "type": "string"
          }
        }
      },
      "CallResource": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CallBase"
          },
          {
            "type": "object",
            "properties": {
              "callStatus": {
                "type": "object"
              },
              "caller": {
                "type": "object"
              },
              "dashboard": {
                "type": "object"
              }
            }
          }
        ]
      },
      "CallPostPut": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CallBase"
          },
          {
            "type": "object",
            "properties": {
              "callStatusId": {
                "type": "integer"
              },
              "callerId": {
                "type": "integer"
              },
              "dashboardId": {
                "type": "integer"
              }
            }
          }
        ]
      }
    }
  },
  "tags": [
    {
      "name": "calls",
      "description": "inbound phone calls"
    },
    {
      "name": "dashboards",
      "description": "instances of CallDash dashboards"
    },
    {
      "name": "misc",
      "description": "miscellaneous endpoints"
    }
  ]
}
