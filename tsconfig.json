{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "target": "es6",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "module": "CommonJS",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./**/_template"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
